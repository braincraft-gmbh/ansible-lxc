# This config is generated from an ansible template of the bc.lxc role
# Any local changes will be overwritten on the next ansible run!

lxc.network.type = veth
lxc.network.name = eth0
lxc.network.link = {{ bridge_interface }}

{% if ip_int is not 'dhcp' %}
lxc.network.ipv4 = 172.{{ location_sub }}.{{ type_sub }}.{{ number }}/16
lxc.network.ipv4.gateway = 172.{{ location_sub }}.1{{ type_sub }}.{{ number }}
{% endif %}

lxc.network.flags = up

{% if host_interface_phys is defined %}
lxc.network.type = phys
lxc.network.name = eth1
lxc.network.link = {{ host_interface_phys }}
lxc.network.flags = up
{% endif %}

# Common configuration
lxc.include = /usr/share/lxc/config/debian.common.conf
lxc.start.auto = 1
